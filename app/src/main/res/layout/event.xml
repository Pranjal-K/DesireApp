<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#67ffae"
    tools:context=".event">

    <!-- TODO: Update blank fragment layout -->

        <RelativeLayout
            android:id="@+id/relative"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/about"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="@string/events_and_achievement"
                android:textColor="@color/Black"
                android:textSize="24sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/event"
                android:layout_width="match_parent"
                android:layout_height="255dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="50dp"
                android:layout_below="@id/about"
                android:src="@drawable/event1" />



            <TextView
                android:id="@+id/text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/event"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginTop="15sp"
                android:text="@string/removing_darkness_from_slum_children_life"
                android:textColor="@color/Black"
                android:textSize="13sp"
                android:textStyle="bold"
                />
            <TextView
                android:id="@+id/textdetail12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/text"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginTop="6sp"
                android:text="@string/achieve"
                android:textColor="@color/Black"
                android:textSize="15sp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                />
            <ImageView
                android:id="@+id/event2"
                android:layout_width="match_parent"
                android:layout_height="284dp"
                android:layout_below="@id/textdetail12"
                android:layout_marginLeft="90dp"
                android:layout_marginRight="90dp"
                android:layout_marginTop="-20dp"
                android:src="@drawable/aahar" />



            <TextView
                android:id="@+id/text2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/event2"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginTop="-18sp"
                android:text="@string/aahar"
                android:textColor="@color/Black"
                android:textSize="15sp"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/textdetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/text2"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginTop="10sp"
                android:text="@string/aadar"
                android:textColor="@color/Black"
                android:textSize="15sp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                />
            <ImageView
                android:id="@+id/event3"
                android:layout_width="match_parent"
                android:layout_height="284dp"
                android:layout_below="@id/textdetail"
                android:layout_marginLeft="90dp"
                android:layout_marginRight="90dp"
                android:layout_marginTop="-15dp"
                android:src="@drawable/litteroflight" />



            <TextView
                android:id="@+id/text3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/event3"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginTop="-18sp"
                android:text="@string/litter_of_light"
                android:textColor="@color/Black"
                android:textSize="18sp"
                android:textStyle="bold"
                />
            <TextView
                android:id="@+id/textdetail2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/text3"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginTop="6sp"
                android:text="@string/litter"
                android:textColor="@color/Black"
                android:textSize="15sp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="15dp"
                />

        </RelativeLayout>
</ScrollView>