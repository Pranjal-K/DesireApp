<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffb067"
    tools:context=".merchandise">

    <!-- TODO: Update blank fragment layout -->

        <RelativeLayout
            android:id="@+id/relative"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/idesire"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10sp"
                android:gravity="center"
                android:text="@string/idesire"
                android:textColor="@color/Black"
                android:textSize="34sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/buy1"
                android:layout_width="349sp"
                android:layout_height="wrap_content"
                android:layout_below="@id/idesire"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:layout_marginTop="10sp"
                android:gravity="center"
                android:text="@string/buy"
                android:textColor="@color/Black"
                android:textSize="25sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/info1"
                android:layout_width="122dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/buy1"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:layout_marginTop="10sp"
                android:gravity="center"
                android:text="@string/cost"
                android:textColor="@color/Black"
                android:textSize="15sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/info"
                android:layout_width="349sp"
                android:layout_height="wrap_content"
                android:layout_below="@id/copy"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:layout_marginTop="10sp"
                android:gravity="center"
                android:text="@string/buybold"
                android:textColor="@color/Black"
                android:textSize="19sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/buy"
                android:layout_width="349sp"
                android:layout_height="wrap_content"
                android:layout_below="@id/info"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:layout_marginTop="10sp"
                android:gravity="center"
                android:text="@string/buyinfo"
                android:textColor="@color/Black"
                android:textSize="15sp"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/copy"
                android:layout_width="wrap_content"
                android:layout_height="250dp"
                android:layout_below="@id/info1"
                android:layout_gravity="center"
                android:layout_marginTop="13dp"
                android:gravity="center"
                android:src="@drawable/copepic"
                android:textColor="@color/Black"
                android:layout_marginLeft="70dp"
                android:layout_marginRight="70dp"/>

        </RelativeLayout>

</ScrollView>